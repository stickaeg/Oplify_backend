generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  password String
  role     Role
  storeId  String?  
  store    Store?   @relation(fields: [storeId], references: [id])
}


enum Role {
  ADMIN
  USER
  DESIGNER
  PRINTER 
  CUTTER
  FULLFILLMENT
}

model Order {
  id             String      @id @default(cuid())
  shopifyId      String
  storeId        String
  store          Store       @relation(fields: [storeId], references: [id])
  orderNumber    Int?
  customerName   String?
  customerEmail  String?
  customerPhone  String?
  address1       String?
  address2       String?
  province       String?
  totalPrice     Float?
  status         Status      @default(PENDING)

  shopifyCurrency        String?     // "USD", "EGP"
  shopifyTransactions    Json?       // JSON array of transactions
  shopifyLocationId      String?     // gid://shopify/Location/...
  
  // Bosta delivery tracking fields
  bostaDeliveryId        String?     // Bosta's _id field
  bostaTrackingNumber    String?     // Bosta's trackingNumber
  deliveryStatus         DeliveryStatus?  // Internal delivery status enum
  deliveryStatusUpdatedAt DateTime?  // Last delivery status update timestamp
  bostaState             Int?        // Raw Bosta state code (10, 30, 45, etc.)
  bostaExceptionReason   String?     // Exception reason if any
  bostaExceptionCode     Int?        // Exception code if any

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  items          OrderItem[]
    returnedItems ReturnedItem[]  // <â€”


  @@unique([shopifyId, storeId])
  @@index([status])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  variantId   String?
  variant     ProductVariant? @relation(fields: [variantId], references: [id])
  
  quantity    Int
  price       Float?
  status      Status   @default(WAITING_BATCH)

  shopifyLineItemId      String?     // gid://shopify/LineItem/...

    returnedItems ReturnedItem[]  // <â€”


  
  BatchItem   BatchItem[]
    stockReservation StockReservation?


  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


  @@unique([orderId, productId, variantId])
  @@index([status])
}


model Store {
  id          String    @id @default(cuid())
  shopDomain  String    @unique
  name        String    @unique
  accessToken String    // encrypted blob (base64 JSON or single string)


  apiSecret   String?   // encrypted secret used to verify webhooks if provided
  bostaApiKey String?   // encrypted Bosta API key for delivery creation
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  shopifyLocationId      String?     // gid://shopify/Location/...

  rules   ProductTypeRule[]
    returnedItems ReturnedItem[]  // <â€”


  users       User[] 
  products    Product[]
  orders      Order[]
  
}

model Product {
  id          String           @id @default(cuid())
  shopifyId   String
  storeId     String
  store       Store            @relation(fields: [storeId], references: [id])
  title       String
  productType String?    
  imgUrl      String?
  isPod       Boolean          @default(false)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  variants    ProductVariant[] 
  OrderItem   OrderItem[]
    returnedItems ReturnedItem[]  // <â€”


  @@unique([shopifyId, storeId])
  @@index([productType])
}

model ProductVariant {
  id                String    @id @default(cuid())
  shopifyId         String    // Shopify variant ID
  productId         String
  product           Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  sku               String?
  
  title             String?   // variant title (e.g., "Small / Red")

  price             Float?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  OrderItem         OrderItem[]
  stockMappings    ProductStockMapping[] // relation field pointing back
  returnedItems ReturnedItem[]  // <â€”


  @@unique([shopifyId, productId])
  @@index([sku])
  @@index([productId])
}

model ProductTypeRule {
  id          String   @id @default(cuid())
  name        String   
  isPod       Boolean  @default(false)

  variantTitle  String?  

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  requiresStock Boolean @default(false) 


  storeId     String

  store       Store    @relation(fields: [storeId], references: [id])
  mainStocks    MainStock[] @relation("MainStockRules")

  batches   Batch[] @relation("BatchRules")

  @@unique([name, variantTitle, storeId], name: "ProductTypeRule_unique")

}

model MainStock {
  id          String                 @id @default(cuid())
  name        String
  totalQty    Int                    @default(0)  
  rules       ProductTypeRule[]      @relation("MainStockRules")



  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt

  @@unique([name])
}


model ReturnedItem {
  id           String   @id @default(cuid())

  storeId      String
  store        Store    @relation(fields: [storeId], references: [id])

  orderItemId  String
  orderItem    OrderItem @relation(fields: [orderItemId], references: [id])

  orderId      String
  order        Order    @relation(fields: [orderId], references: [id])

  productId    String
  product      Product  @relation(fields: [productId], references: [id])

  variantId    String?
  variant      ProductVariant? @relation(fields: [variantId], references: [id])

  quantity     Int
  reason       String?
  createdAt    DateTime @default(now())

  @@index([storeId])
  @@index([orderItemId])
  @@index([productId])
  @@index([variantId])
}


model ProductStockQuantity {
  id               String         @id @default(cuid())
  mainStockId      String
  
  sku         String   // universal SKU for this main stock

 

  quantity         Int            @default(0)  // the quantity of THIS product in THIS main stock

  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@unique([mainStockId, sku])
  
}


model Batch {
  id          String   @id @default(cuid())
  name        String

  rules       ProductTypeRule[] @relation("BatchRules")

  qrCodeUrl   String?  
  qrCodeToken String?  @unique 

  maxCapacity Int
  capacity    Int       @default(0)
  items       BatchItem[]
  status Status @default(WAITING_BATCH)
  
  handlesStock  Boolean          @default(false)   // NEW: indicates batch involves stock handling

  createdAt   DateTime  @default(now())

  File File[]
}


model BatchItem {
  id          String          @id @default(cuid())
  batchId     String
  batch       Batch           @relation(fields: [batchId], references: [id])
  orderItemId String
  orderItem   OrderItem       @relation(fields: [orderItemId], references: [id])
  quantity    Int             @default(1)

  status      Status          @default(WAITING_BATCH)

  // ðŸ”— Relation to the new units
  units       BatchItemUnit[]
}

model BatchItemUnit {
  id           String      @id @default(cuid())
  batchItemId  String
  batchItem    BatchItem   @relation(fields: [batchItemId], references: [id])
  
  qrCodeUrl    String?
  qrCodeToken  String?     @unique
  
  status       Status      @default(WAITING_BATCH)
  
}

model File {
  id         String   @id @default(cuid())
  name       String
  fileId     String
  mimeType   String
  size       Int
  status     Status   @default(PENDING)
  batch      Batch?   @relation(fields: [batchId], references: [id])
  batchId    String?
  createdAt  DateTime @default(now())
}


enum Status {
  PENDING         
  WAITING_BATCH   
  BATCHED 
  DESIGNING
  DESIGNED
  PRINTING
  PRINTED
  CUTTING
  CUT
  FULFILLMENT
  FULFILLED
  PACKED
  REPRINT
  REDESIGN
  COMPLETED
  RETURNED
  CANCELLED
}


// Represents a physical stock item (e.g., "Standard Ceramic Mug 11oz")
model StockItem {
  id          String          @id @default(cuid())
  name        String
  sku         String          @unique

  variants    StockVariant[]
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// Variants of the stock item, e.g., colors (blue, red, pink)
model StockVariant {
  id            String          @id @default(cuid())
  stockItemId   String
  stockItem     StockItem       @relation(fields: [stockItemId], references: [id], onDelete: Cascade)
  
  sku           String          @unique
  name          String
  color         String?
  size          String?
  currentStock  Int             @default(0)
  minStockLevel Int             @default(5)
  maxStockLevel Int?

  storeIds       String[]   
  productTypes   String[]
  variantTitles  String[]   

  
  reservations  StockReservation[]
  movements     StockMovement[]

  productMappings ProductStockMapping[]  

  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

}

// Links the Shopify ProductVariant to your StockVariant with quantity required
model ProductStockMapping {
  id               String          @id @default(cuid())
    
  productVariantId String
  productVariant   ProductVariant  @relation(fields: [productVariantId], references: [id], onDelete: Cascade)
  
  stockVariantId   String
  stockVariant     StockVariant    @relation(fields: [stockVariantId], references: [id])
  
  quantityRequired Int             @default(1)
  
  createdAt        DateTime        @default(now())

  @@unique([productVariantId, stockVariantId])
}

// Holds reserved stock for orders
model StockReservation {
  id              String          @id @default(cuid())
  stockVariantId  String
  stockVariant    StockVariant    @relation(fields: [stockVariantId], references: [id])
  
  orderItemId     String          @unique
  orderItem       OrderItem       @relation(fields: [orderItemId], references: [id])
  
  quantity        Int
  status          ReservationStatus @default(RESERVED)
  
  expiresAt       DateTime?
  reservedAt      DateTime        @default(now())
  fulfilledAt     DateTime?
  releasedAt      DateTime?
  
  @@index([stockVariantId, status])
}

enum ReservationStatus {
  RESERVED
  FULFILLED
  RELEASED
}

// Tracks all stock movements for audit and tracking
model StockMovement {
  id              String          @id @default(cuid())
  stockVariantId  String
  stockVariant    StockVariant    @relation(fields: [stockVariantId], references: [id])
  
  type            MovementType
  quantity        Int
  previousStock   Int
  newStock        Int
  
  orderItemId     String?
  batchId         String?
  userId          Int?
  
  reason          String?
  notes           String?
  
  createdAt       DateTime        @default(now())
  
  @@index([stockVariantId, createdAt])
  @@index([type])
}

enum MovementType {
  PURCHASE
  SALE
  ADJUSTMENT
  DAMAGE
  RETURN
}

enum DeliveryStatus {
  DELIVERY_CREATED
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  FAILED
  RETURNED
  EXCEPTION
  CANCELLED
}
